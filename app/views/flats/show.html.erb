<div class="container">
  <div class="row">
    <div class="col">
      <div class="show-header">
        <div>
          <h1 class="card-title"><%= @flat.name %></h1>
        </div>
        <div class="undertitle-info">
          <div class="undertitle-info-item">
            Planete : <%= @flat.planet %>
          </div>
          <div class="undertitle-info-item">
            For <%= @flat.number_of_guests %> travelers
          </div class="undertitle-info-item">
          <div>
            Price : <%= @flat.price %> <i class="fa-brands fa-rebel" style="color: #71a4ac;"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="show-img" style="background-image:  url(<%= asset_path("#{@flat_images[@flat.id]}") %>)">
    </div>

    <div class="d-flex">
      <div class="show-card-body col-8">
        <p class="card-text"><%= @flat.description %></p>
      </div>
  <div class="show-card-booking col-4">
    <div class="card-booking">
      <h6><b><%= @flat.price %> <i class="fa-brands fa-rebel" style="color: #71a4ac;"></i>(solaris) </b> / night</h6>
      <%= form_with(model: [@flat, @booking]) do |form| %>
        <div class="input-group">
          <span class="input-group-text" id="start-date-label">From:</span>
          <%= form.text_field :arrival_date, class: "form-control", placeholder: "12/10/2017", aria: { label: "start-date", describedby: "start-date-label" } %>
        </div>
        <div class="input-group mt-2">
          <span class="input-group-text" id="end-date-label">To:</span>
          <%= form.text_field :departure_date, class: "form-control", placeholder: "18/10/2017", aria: { label: "end-date", describedby: "end-date-label" } %>
        </div>
        <%= form.submit "Book this experience", class: "search_btn mt-2 text-center",  style: "width: 100%" %>
      <% end %>
    </div>
  </div>
  </div>
<div class="show-card-review col-8">
  <div class="card-review">
    <h2>Reviews</h2>
    <%= render partial: 'reviews/new', locals: { flat: @flat } %>
  </div>
</div>
