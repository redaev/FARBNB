  <%= form_with(model: [@flat, @booking]) do |form| %>
  <div class="input-group">
    <span class="input-group-text" id="start-date-label">From:</span>
    <%= form.text_field :arrival_date, class: "form-control", placeholder: "12/10/2017", aria: { label: "start-date", describedby: "start-date-label" } %>
  </div>
  <div class="input-group mt-2">
    <span class="input-group-text" id="end-date-label">To:</span>
    <%= form.text_field :departure_date, class: "form-control", placeholder: "18/10/2017", aria: { label: "end-date", describedby: "end-date-label" } %>
  </div>
  <%= form.submit "Book", class: "btn btn-success mt-2", style: "width: 100%" %>
<% end %>
